.container {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.connection-status {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.connected {
  background-color: #d4edda;
  color: #155724;
}

.connected .status-dot {
  background-color: #28a745;
}

.disconnected {
  background-color: #f8d7da;
  color: #721c24;
}

.disconnected .status-dot {
  background-color: #dc3545;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-view {
  width: 100%;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  text-align: center;
}

.date-time-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hint {
  font-size: 24rpx;
  color: #666;
}

.save-btn {
  width: 100%;
  background-color: #07C160;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.disabled {
  background-color: #ccc;
  color: #666;
}

.current-reminder {
  margin: 40rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.reminder-card {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  border-left: 8rpx solid #07C160;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.reminder-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.reminder-time {
  font-size: 26rpx;
  color: #07C160;
  text-align: right;
}

.tips {
  margin-top: 50rpx;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tip-title {
  display: block;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.tips text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
} 