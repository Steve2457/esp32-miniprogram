.container {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.connection-status {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.connected {
  background-color: #d4edda;
  color: #155724;
}

.connected .status-dot {
  background-color: #28a745;
}

.disconnected {
  background-color: #f8d7da;
  color: #721c24;
}

.disconnected .status-dot {
  background-color: #dc3545;
}

.time-setting {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.time-display {
  display: flex;
  justify-content: center;
  align-items: center;
}

.time-unit {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.value {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  width: 120rpx;
  text-align: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.colon {
  font-size: 80rpx;
  color: #333;
  margin: 0 10rpx;
  padding-bottom: 40rpx;
}

.timer-status {
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  color: #666;
  height: 40rpx;
}

.running {
  color: #28a745;
  font-weight: bold;
}

.control-buttons {
  display: flex;
  flex-direction: column;
  margin: 40rpx 0;
}

.control-btn {
  width: 100%;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.start {
  background-color: #28a745;
  color: white;
}

.stop {
  background-color: #dc3545;
  color: white;
}

.reset {
  background-color: #6c757d;
  color: white;
}

.disabled {
  background-color: #ccc;
  color: #666;
}

.tips {
  margin-top: 50rpx;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tip-title {
  display: block;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.tips text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
} 