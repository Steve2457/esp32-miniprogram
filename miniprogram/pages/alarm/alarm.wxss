.container {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.connection-status {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.connected {
  background-color: #d4edda;
  color: #155724;
}

.connected .status-dot {
  background-color: #28a745;
}

.disconnected {
  background-color: #f8d7da;
  color: #721c24;
}

.disconnected .status-dot {
  background-color: #dc3545;
}

.time-picker {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  padding: 40rpx 0;
}

.picker-view {
  text-align: center;
}

.time-text {
  display: block;
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.hint {
  font-size: 28rpx;
  color: #666;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  margin-top: 30rpx;
  background-color: #07C160;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
}

.disabled {
  background-color: #ccc;
  color: #666;
}

.tips {
  margin-top: 50rpx;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tip-title {
  display: block;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.tips text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
} 