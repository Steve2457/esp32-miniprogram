.container {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.btn {
  width: 45%;
  font-size: 28rpx;
}

.primary {
  background-color: #07C160;
  color: white;
}

.status {
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
}

.success {
  background-color: #d4edda;
  color: #155724;
}

.error {
  background-color: #f8d7da;
  color: #721c24;
}

.tips {
  margin-top: 50rpx;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tip-title {
  display: block;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.tips text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
} 